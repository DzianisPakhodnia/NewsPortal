@model List<NewsPortal.Models.News>

@{
    ViewData["Title"] = "Управление новостями";
}

<div class="container-fluid py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h1 class="display-4 fw-bold text-primary mb-2">Управление новостями</h1>
                <p class="lead text-muted">Редактируйте и управляйте новостями</p>
                <a href="@Url.Action("CreateNews", "Admin")" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-plus-circle me-2"></i>Опубликовать новость
                </a>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-newspaper display-1 text-muted mb-3"></i>
                <h3 class="text-muted">Новостей пока нет</h3>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var news in Model)
                {
                    @await Html.PartialAsync("_NewsCardAdmin", news)
                }
            </div>
        }
    </div>
</div>
