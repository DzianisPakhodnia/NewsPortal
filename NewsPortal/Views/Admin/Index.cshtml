@model IEnumerable<NewsPortal.Models.News>

@{
    ViewData["Title"] = "Управление новостями";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Заголовок и кнопка создания -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6 fw-bold text-dark mb-2">Управление новостями</h1>
                    <p class="text-muted">Создавайте, редактируйте и управляйте новостями</p>
                </div>
                <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Создать новость
                </a>
            </div>

            <!-- Проверка на null -->
            @if (Model == null)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Данные не загружены. Пожалуйста, попробуйте позже.
                </div>
            }
            else if (!Model.Any())
            {
                <!-- Сообщение при отсутствии новостей -->
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="bi bi-newspaper display-1 text-muted mb-3"></i>
                        <h3 class="text-muted">Новостей пока нет</h3>
                        <p class="text-muted mb-4">Создайте первую новость, чтобы начать работу</p>
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Создать новость
                        </a>
                    </div>
                </div>
            }
            else
            {
                <!-- Карточки новостей -->
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6">
                            <div class="card news-admin-card border-0 shadow-sm h-100">
                                <!-- Изображение с проверкой на null -->
                                @if (!string.IsNullOrEmpty(item?.ImageUrl))
                                {
                                    <div class="card-img-container position-relative">
                                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                             style="height: 200px; object-fit: cover;">
                                        <div class="card-actions position-absolute top-0 end-0 p-2">
                                            <div class="btn-group">
                                                <a href="@Url.Action("Edit", new { id = item.Id })"
                                                   class="btn btn-sm btn-light">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.Id })"
                                                   class="btn btn-sm btn-light">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="card-img-container position-relative bg-light">
                                        <div style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-image text-muted display-4"></i>
                                        </div>
                                        <div class="card-actions position-absolute top-0 end-0 p-2">
                                            <div class="btn-group">
                                                <a href="@Url.Action("Edit", new { id = item.Id })"
                                                   class="btn btn-sm btn-light">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.Id })"
                                                   class="btn btn-sm btn-light">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Тело карточки с проверкой на null -->
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold text-dark mb-2">
                                        @item?.Title ?? "Без названия"
                                    </h5>

                                    @if (!string.IsNullOrEmpty(item?.Subtitle))
                                    {
                                        <h6 class="card-subtitle text-muted mb-3">@item.Subtitle</h6>
                                    }

                                    <p class="card-text text-secondary flex-grow-1">
                                        @{
                                            var text = item?.Text ?? "";
                                            var preview = text.Length > 150 ? text.Substring(0, 150) + "..." : text;
                                        }
                                        @preview
                                    </p>

                                    <!-- Мета-информация -->
                                    <div class="mt-auto pt-3 border-top">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>
                                                @item?.CreatedAt.ToString("dd.MM.yyyy") ?? "Дата не указана"
                                            </small>
                                            <div class="btn-group">
                                                <a href="@Url.Action("Details", new { id = item?.Id })"
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye me-1"></i>Просмотр
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = item?.Id })"
                                                   class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Стили -->
<style>
    .news-admin-card {
        border-radius: 16px;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .news-admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .card-img-container {
        overflow: hidden;
    }

    .card-actions {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .news-admin-card:hover .card-actions {
        opacity: 1;
    }

    .empty-state {
        max-width: 400px;
        margin: 0 auto;
    }

    .btn-group .btn {
        border-radius: 8px;
        margin: 0 2px;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">