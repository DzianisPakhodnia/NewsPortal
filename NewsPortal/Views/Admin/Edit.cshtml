@model NewsPortal.Models.News

@{
    ViewData["Title"] = "Редактировать новость";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-3 col-lg-2 mb-4">
            <div class="list-group shadow-sm rounded-3">
                <a href="@Url.Action("AllNews", "Admin")" class="list-group-item list-group-item-action">
                    <i class="bi bi-newspaper me-2"></i>Все новости
                </a>
                <a href="@Url.Action("EditNews", "Admin", new { id = Model.Id })" class="list-group-item list-group-item-action active">
                    <i class="bi bi-pencil me-2"></i>Редактировать новость
                </a>
                <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action">
                    <i class="bi bi-house-door me-2"></i>На главную
                </a>
                <a href="@Url.Action("Logout", "Admin")" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i>Выйти
                </a>
            </div>
        </div>

        <!-- Основная часть: форма редактирования -->
        <div class="col-md-9 col-lg-10">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold text-dark mb-4">
                        <i class="bi bi-pencil me-2 text-primary"></i>Редактирование новости
                    </h2>

                    <form asp-action="EditNews" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Заголовок</label>
                            <input asp-for="Title" class="form-control form-control-lg" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subtitle" class="form-label fw-semibold">Подзаголовок</label>
                            <input asp-for="Subtitle" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label fw-semibold">Текст новости</label>
                            <textarea asp-for="Text" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Текущее изображение</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid mb-2" style="max-height: 200px;" />
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label fw-semibold">Загрузить новое изображение (по желанию)</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a href="@Url.Action("AllNews", "Admin")" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i>Сохранить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
