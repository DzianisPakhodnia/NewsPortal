@model NewsPortal.Models.News

@{
    ViewData["Title"] = "Создать новость";
}

<link rel="stylesheet" href="~/css/admin-news.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-3 col-lg-2 mb-4">
            <partial name="_AdminSidebar" />
        </div>
        <div class="col-md-9 col-lg-10">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold text-dark mb-4">
                        <i class="bi bi-plus-circle me-2 text-primary"></i>Создание новости
                    </h2>

                    <form asp-action="CreateNews" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Заголовок</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Введите заголовок новости" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subtitle" class="form-label fw-semibold">Подзаголовок</label>
                            <input asp-for="Subtitle" class="form-control" placeholder="Введите подзаголовок (необязательно)" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label fw-semibold">Текст новости</label>
                            <textarea asp-for="Text" class="form-control" rows="6" placeholder="Введите основной текст новости"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label fw-semibold">Изображение</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a href="@Url.Action("AllNews", "Admin")" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Валидация и скрипты -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
