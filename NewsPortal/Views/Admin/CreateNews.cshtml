@model NewsPortal.Models.News

@{
    ViewData["Title"] = "Создать новость";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Левая панель действий -->
        <div class="col-md-3 col-lg-2 mb-4">
            <div class="list-group shadow-sm rounded-3">
                <a href="@Url.Action("AllNews", "Admin")" class="list-group-item list-group-item-action">
                    <i class="bi bi-newspaper me-2"></i>Все новости
                </a>
                <a href="@Url.Action("Create", "Admin")" class="list-group-item list-group-item-action active">
                    <i class="bi bi-plus-circle me-2"></i>Создать новость
                </a>
                <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action">
                    <i class="bi bi-house-door me-2"></i>На главную
                </a>
                <a href="@Url.Action("Logout", "Admin")" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i>Выйти
                </a>
            </div>
        </div>

        <!-- Основная часть: форма создания -->
        <div class="col-md-9 col-lg-10">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold text-dark mb-4">
                        <i class="bi bi-plus-circle me-2 text-primary"></i>Создание новости
                    </h2>

                    <form asp-action="CreateNews" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Заголовок</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Введите заголовок новости" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subtitle" class="form-label fw-semibold">Подзаголовок</label>
                            <input asp-for="Subtitle" class="form-control" placeholder="Введите подзаголовок (необязательно)" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label fw-semibold">Текст новости</label>
                            <textarea asp-for="Text" class="form-control" rows="6" placeholder="Введите основной текст новости"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label fw-semibold">Изображение</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        </div>


                        <div class="d-flex justify-content-end mt-4">
                            <a href="@Url.Action("AllNews", "Admin")" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> Сохранить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Валидация и стили -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .list-group-item {
        border: none;
        font-size: 1rem;
        padding: 12px 18px;
        transition: all 0.2s ease;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
            transform: translateX(4px);
        }

        .list-group-item.active {
            background-color: #0d6efd;
            color: white;
            font-weight: 600;
        }

    .card {
        border-radius: 16px;
    }

    textarea.form-control {
        resize: vertical;
    }

    @@media (max-width: 768px) {
        .list-group {
            flex-direction: row;
            overflow-x: auto;
            white-space: nowrap;
        }

    {
        flex-direction: row;
        overflow-x: auto;
        white-space: nowrap;
    }

    .list-group-item {
        display: inline-block;
        min-width: 180px;
        text-align: center;
    }

    }
</style>

