@model NewsPortal.Models.News

<div class="col-sm-6 col-lg-4">
    <a href="@Url.Action("Details", "News", new { id = Model.Id })" class="text-decoration-none">
        <div class="card news-admin-card h-100 border-0 shadow-hover">
            <!-- Изображение -->
            <div class="card-image-container position-relative overflow-hidden @(string.IsNullOrEmpty(Model.ImageUrl) ? "bg-light d-flex align-items-center justify-content-center" : "")" style="height: 220px;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 220px; object-fit: cover;">
                }
                else
                {
                    <i class="bi bi-image text-muted display-4"></i>
                }
            </div>

            <!-- Тело карточки -->
            <div class="card-body d-flex flex-column p-4">
                <h5 class="card-title fw-bold text-dark mb-2 line-clamp-2">@Model.Title</h5>

                @if (!string.IsNullOrEmpty(Model.Subtitle))
                {
                    <h6 class="card-subtitle text-muted mb-3 line-clamp-1">@Model.Subtitle</h6>
                }

                <p class="card-text text-secondary mb-4 flex-grow-1 line-clamp-3">
                    @Model.Text
                </p>

                <div class="d-flex justify-content-start align-items-center pt-3 border-top">
                    <small class="text-muted">
                        <i class="bi bi-calendar me-1"></i>
                        @Model.CreatedAt.ToString("dd.MM.yyyy")
                    </small>
                </div>
            </div>
        </div>
    </a>
</div>
