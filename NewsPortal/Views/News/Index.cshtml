@model List<NewsPortal.Models.News>

@{
    ViewData["Title"] = "Новости";
}

<div class="container-fluid py-5 bg-light">
    <div class="container">
        <!-- Заголовок с современным оформлением -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold text-primary mb-3">Новости</h1>
                <p class="lead text-muted">Будьте в курсе последних событий</p>
            </div>
        </div>

        <!-- Сетка новостей -->
        <div class="row g-4" data-masonry='{"percentPosition": true}'>
            @foreach (var news in Model)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="card news-card h-100 border-0 shadow-hover">
                        <!-- Изображение с эффектом -->
                        @if (!string.IsNullOrEmpty(news.ImageUrl))
                        {
                            <div class="card-image-container position-relative overflow-hidden">
                                <img src="@news.ImageUrl" class="card-img-top" alt="@news.Title"
                                     style="height: 220px; object-fit: cover;">
                                <div class="image-overlay"></div>
                            </div>
                        }

                        <!-- Тело карточки -->
                        <div class="card-body d-flex flex-column p-4">
                            <!-- Заголовок и подзаголовок -->
                            <div class="mb-3">
                                <h5 class="card-title fw-bold text-dark mb-2 line-clamp-2">@news.Title</h5>
                                @if (!string.IsNullOrEmpty(news.Subtitle))
                                {
                                    <h6 class="card-subtitle text-primary fw-semibold">@news.Subtitle</h6>
                                }
                            </div>

                            <!-- Текст -->
                            <p class="card-text text-secondary mb-4 flex-grow-1 line-clamp-3">
                                @news.Text
                            </p>

                            <!-- Футер карточки -->
                            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                <div class="d-flex align-items-center">
                                    <i class="far fa-clock text-muted me-2 small"></i>
                                    <small class="text-muted">@news.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                                <a href="@Url.Action("Details", "News", new { id = news.Id })"
                                   class="btn btn-primary btn-sm rounded-pill px-3">
                                    Читать <i class="fas fa-arrow-right ms-1 small"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Пагинация (если нужно) -->
        <div class="row mt-5">
            <div class="col-12 d-flex justify-content-center">
                <nav>
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Предыдущая</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Следующая</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Стили -->
<style>
    .news-card {
        transition: all 0.3s ease;
        border-radius: 16px;
        overflow: hidden;
    }

    .shadow-hover {
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .news-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0,0,0,0.15);
    }

    .card-image-container {
        position: relative;
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .news-card:hover .image-overlay {
        opacity: 1;
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .btn-rounded {
        border-radius: 20px;
    }
</style>

<!-- Подключение иконок Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">